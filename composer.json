{
    "name": "netcommons/content-comments",
    "description": "ContentComments for NetCommons Plugin",
    "homepage": "http://www.netcommons.org/",
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakephp/cakephp":              "~2.4",
        "cakephp/debug_kit":            "~2.2",
        "cakedc/migrations":            "~2.2",
        "components/jquery":            "~2.1",
        "phpunit/phpunit":              "~3.7.38",
        "twbs/bootstrap":               "~3.1"
    },
    "require-dev": {
        "mustangostang/spyc":           "dev-master",
        "satooshi/php-coveralls":       "dev-master",
        "netcommons/frames":            "dev-master",
        "netcommons/m17n":              "dev-master",
        "netcommons/net-commons":       "dev-master",
        "netcommons/pages":             "dev-master",
        "netcommons/users":             "dev-master"
    },
    "license": "NetCommons License",
    "authors": [
        {
            "name": "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/Comments/graphs/contributors"
        }
    ],
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "content-comments"],
    "config": {
        "vendor-dir": "vendors"
    }
}
